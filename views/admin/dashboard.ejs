<% include('../layouts/adminHeader.ejs') %>
<h1>Dashboard</h1>

<a href="/admin/new-user">Add New User</a>
<br><br>

<table width="50%">
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Image</th>
    <th>Verified</th>
    <th>Actions</th>
  </tr>
  <%
    if(users.length > 0) {
      for(let i=0;i<users.length;i++) {
        %>
        <tr>
          <td><p style="font-weight: 800;"><%= users[i].name %></p></td>
          <td><p style="font-weight: 800;"><%= users[i].email %></p></td>
          <td>
            <img 
              src="/userImages/<%= users[i].image %>"
              alt="<%= users[i].image %>" 
              width="120px" 
              height="120px" 
            >
          </td>
          <td>
            <% if(users[i].is_verified == 1) { %>
            <p style="color: green">Verified</p>
            <% } else { %>
            <p style="color: red">No</p>
            <% } %>
          </td>
          <td>
            <a href="/admin/edit-user?id=<%= users[i]._id %>">Edit</a>
          </td>
        </tr>
        <% } } else { %>
        <tr><td colspan="5">Users Not Found</td></tr>
      <% } %> 
</table>
<br>
<a href="/admin/home">Go to Home</a>

<% include('../layouts/adminFooter.ejs') %>
